<mvc:View   
            controllerName="b24c302.controller.EmployeeDetails"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc">

        <Page title="{i18n>employeeDetails}">

            <Panel>

                <FlexBox height="65px"
                        justifyContent="Center"
                        alignItems="Center">

                    <items>

                        <Text text="{jsonEmployees>FirstName}, {jsonEmployees>LastName}" class="boldText"/>
                    
                    </items>
                
                </FlexBox>

                <FlexBox height="65px" justifyContent="SpaceBetween">

                    <items>

                        <VBox>
                            <Text text="{i18n>employeeID}:" class="boldText sapUiTinyMarginEnd"/>
                            <Text text="{jsonEmployees>EmployeeID}"/>
                        </VBox>

                        <VBox>
                            <Text text="{i18n>titleEmployee}:" class="boldText"/>
                            <Text text="{jsonEmployees>Title}"/>
                        </VBox>
                    
                    </items>
                
                </FlexBox>

                <FlexBox justifyContent="SpaceBetween">

                    <items>

                        <HBox>
                            <Text text="{i18n>countryCode}:" class="boldText sapUiTinyMarginEnd"/>
                            <Text text="{jsonEmployees>Country}"/>
                        </HBox>

                        <HBox>
                            <Text text="{i18n>city}:" class="boldText sapUiTinyMarginEnd"/>
                            <Text text="{jsonEmployees>City}"/>
                        </HBox>


                        <HBox>
                            <Text text="{i18n>postalCode}:" class="boldText sapUiTinyMarginEnd"/>
                            <Text text="{jsonEmployees>PostalCode}"/>
                        </HBox>
                    
                    </items>
                
                </FlexBox>
            
            </Panel>

            <Panel class="sapUiSizeCompact" 
                    backgroundDesign="Transparent">

                <headerToolbar>

                    <Toolbar>

                        <Title text="{i18n>incidence} {= ${jsonEmployees>Country} !== 'US' ? ${i18n>europe} : ${i18n>us} }"/>
                        <ToolbarSpacer/>
                        <Button text="{i18n>createIncidence}"
                                press="onCreateIncidence"/>
                    
                    </Toolbar>
                
                </headerToolbar>

                <content>

                    <Panel id="tableIncidence" 
                            class="sapUiNoContentPadding"
                            backgroundDesign="Transparent"/>

                </content>

            
            </Panel>

        </Page>

</mvc:View>