<core:FragmentDefinition
            xmlns="sap.m"
            xmlns:core="sap.ui.core">

    <Dialog>
    
        <content>
            <Table items="{northwind>Orders}">

                    <columns>

                        <Column>
                            <Label text="{i18n>OrderID}"/>
                        </Column>

                        <Column>
                            <Label text="{i18n>Freight}"/>
                        </Column>

                        <Column>
                            <Label text="{i18n>ShipAddress}"/>
                        </Column>
                    
                    </columns>

                    <items>

                        <ColumnListItem>

                            <cells>

                                <Text text="{northwind>OrderID}"/>
                                <Text text="{northwind>Freight}"/>
                                <Text text="{northwind>ShipAddress}"/>
                            
                            </cells>

                        </ColumnListItem>
                    
                    </items>

            </Table>
        </content>

        <endButton>
            <Button id="cancel"
                    text="{i18n>cancel}"
                    type="Reject"
                    press="onCloseDialog"
                    width="6rem"/>
        </endButton>

        <beginButton>
            <Button id="navto"
                    text="{i18n>navto}"
                    type="Accept"
                    press="onNavToDetails"
                    width="6rem"/>
        </beginButton>

    </Dialog>

</core:FragmentDefinition>